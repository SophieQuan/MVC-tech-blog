<div class=" m-3 align-items-right">
    <button id="addPost-btn">Add Post</button>
</div>
{{#if posts.length}}
<section>
    <h3 class="mt-3">Your Posts</h3>
    <div>
        {{#each posts as |post|}}
        {{> post-info post}}
        <a href="/dashboard/edit/{{id}}" class="edit-link">Edit post</a>
        {{/each}}
    </div>
</section>
{{/if}}
<section id="createPostContainer" class="hide mt-3">
    <h2>Create New Post</h2>

    <form class="new-post-form">
        <div>
            <label for="post-title">Title</label>
            <input type="text" id="post-title" name="post-title" />
        </div>
        <div>
            <label for="post-content">Content</label>
            <textarea name="post-content" id="post-content" cols="40" rows="7"></textarea>
        </div>
        <button type="submit" class="btn">Create</button>
    </form>

</section>


<script src="/javascript/add-post.js"></script>