<div class="comment container">

    <h5>Comments</h5>
    {{#if this}}
    {{#each this}}
    <section class="comment p-3 m-1 each-comment">
        <div class="meta">
            {{user.username}} on {{format_date created_at}}
        </div>
        <div class="text">
            {{comment_text}}
        </div>
    </section>
    {{/each}}

    {{else}}
    <div class="comment">
        <p>There are no comments!</p>
    </div>
    {{/if}}
</div>